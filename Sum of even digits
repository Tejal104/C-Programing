/* WAP to accept a number from user and find out sum of even digits upto that given number */

#include<stdio.h>
int main()
{
	int i, n, sum = 0;

	printf("Enter a Number: ");
	scanf("%d", &n);
	
	for (i=2; i<=n ; i+=2)
	{
		if (i%2==0)
		{
		sum=sum+i;
		}
	}
        
       printf("Sum of Even Digits up to %d = %d",n,sum);
    return 0;
}

/*
OUTPUT:
Enter a Number: 100
Sum of Even Digits up to 100 = 2550
*/
