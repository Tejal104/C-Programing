#include<stdio.h>
int main()
{
int n,i,j;
printf("How many rows do you want? ");
scanf("%d", &n);

for (i=1 ; i<=n ; i++)
{
	for (j=1 ; j<=i ; j++)
	{
		printf("%c", (char)(j+64));
	}
	
	printf("\n");
}

return 0;
}

/*
OUTPUT:

Enter a number of n : 3
A
AB
ABC
--------------------------------

How many rows do you want? 5
A
AB
ABC
ABCD
ABCDE

*/
